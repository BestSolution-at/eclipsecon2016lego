<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import org.eclipse.fx.ui.panes.GridData?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.bestsolution.lego.ui.LegoPropertyEditorController">
	<children>
		<Label text="Name" minWidth="-Infinity" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
		<TextField fx:id="name"  GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="3" />

		<Label text="X" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
		<Label text="Y" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
		<Label text="Z" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

		<Label text="Dimension" minWidth="-Infinity" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

		<TextField fx:id="xDim" GridPane.columnIndex="1" GridPane.rowIndex="2" />
		<TextField fx:id="yDim" GridPane.columnIndex="2" GridPane.rowIndex="2" />
		<TextField fx:id="zDim" GridPane.columnIndex="3" GridPane.rowIndex="2" />

		<Label text="Coordinates" minWidth="-Infinity" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

		<TextField fx:id="xCoord" GridPane.columnIndex="1" GridPane.rowIndex="3" />
		<TextField fx:id="yCoord" GridPane.columnIndex="2" GridPane.rowIndex="3" />
		<TextField fx:id="zCoord" GridPane.columnIndex="3" GridPane.rowIndex="3" />

		<Label text="Rotation" minWidth="-Infinity" GridPane.columnIndex="0" GridPane.rowIndex="4" />
		<ComboBox fx:id="rotation" GridPane.columnIndex="1" GridPane.rowIndex="4"  GridPane.columnSpan="3" />

		<Label text="Color" minWidth="-Infinity" GridPane.columnIndex="0" GridPane.rowIndex="5" />
		<ColorPicker fx:id="colorPicker" GridPane.columnIndex="1" GridPane.rowIndex="5"  GridPane.columnSpan="3" />

	</children>
</GridPane>

